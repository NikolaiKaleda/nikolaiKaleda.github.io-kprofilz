@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="recentlyProducts">
        <h3 class="recentlyTitle">@T("Products.RecentlyViewedProducts")</h3>
        @foreach (var product in Model)
        {
            <div class="recentlyItem">
                <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" class="recentlyLink">
                    <div class="recentlyImg">
                        <img src="@product.DefaultPictureModel.ImageUrl" alt="@product.DefaultPictureModel.AlternateText">
                    </div>
                    <div class="recentlyText">
                        <h4>@product.Name</h4>
                        <p>@product.ShortDescription</p>
                    </div>
                </a>
            </div>
        }
    </div>
}